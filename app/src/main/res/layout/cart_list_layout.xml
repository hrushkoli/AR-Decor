<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:src="@drawable/ardecorcondensed">
            </ImageView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/productBrandText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="descriptionText"
                    android:layout_marginLeft="12dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/raleway_medium">
                </TextView>

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Lorem Ipsum"
                    android:textSize="16dp"
                    android:fontFamily="@font/raleway_bold"
                    android:textColor="@color/black">
                </TextView>

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"

                    android:text="â‚¹Price"
                    android:textSize="16dp"
                    android:fontFamily="@font/raleway_medium">
                </TextView>



                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="12dp"
                        >

                        <TextView
                            android:id="@+id/decreaseQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:fontFamily="@font/raleway_medium"
                            android:text="-"
                            ></TextView>

                        <TextView
                            android:id="@+id/productQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity"
                            android:textSize="16dp"
                            android:fontFamily="@font/raleway_medium">
                        </TextView>

                        <TextView
                            android:id="@+id/increaseQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="+"
                            android:fontFamily="@font/raleway_medium">
                        </TextView>


                    </LinearLayout>

                    <com.marozzi.roundbutton.RoundButton
                        android:id="@+id/deleteFromCartBtn"
                        android:layout_width="88dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="@font/raleway_bold"
                        android:gravity="center"
                        android:text="Delete"
                        app:rb_background_color="@color/primary"
                        app:rb_corner_radius="15dp"
                        app:rb_text_color="@color/white"
                        android:layout_marginBottom = "15dp"/>

                </LinearLayout>




            </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>