<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/productListImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ardecorcondensed">
            </ImageView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/productListDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="descriptionText"
                    android:textSize="18dp"
                    android:fontFamily="@font/raleway_medium">
                </TextView>

                <TextView
                    android:id="@+id/productListName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum"
                    android:textSize="16dp"
                    android:fontFamily="@font/raleway_bold"
                    android:textColor="@color/black">
                </TextView>

                <TextView
                    android:id="@+id/productListPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹Price"
                    android:textSize="16dp"
                    android:fontFamily="@font/raleway_medium">
                </TextView>







            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>