<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment">

    <com.amar.library.ui.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ProfileActivity"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop = "16sp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginLeft = "16sp"
        android:layout_marginRight = "16sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to AR Decor"
            android:fontFamily = "@font/raleway_bold"
            android:textSize="24sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up or log in to access special discounts"
            android:fontFamily = "@font/raleway_medium"
            android:textSize="18sp"
            android:paddingRight = "20sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10sp">
            <com.marozzi.roundbutton.RoundButton
                android:id="@+id/signupBtn"
                android:fontFamily="@font/raleway_bold"
                android:layout_width="88dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="Sign up"
                app:rb_background_color="@color/primary"
                app:rb_corner_radius="15dp"
                app:rb_text_color="@color/white"/>

            <com.marozzi.roundbutton.RoundButton
                android:id="@+id/loginButton"
                android:fontFamily="@font/raleway_bold"
                android:layout_width="88dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="Log in"
                app:rb_background_color="@color/primary"
                app:rb_corner_radius="15dp"
                app:rb_text_color="@color/white"
                android:layout_marginLeft="12sp"/>

        </LinearLayout>

        <!--    Divider -->
        <View
            android:layout_marginTop="12sp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp"
                android:layout_marginBottom="24sp"
                android:text="Settings"
                android:textSize="14sp"
                android:fontFamily="@font/raleway_medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey" />
            <TextView
                android:id="@+id/policies"
                android:layout_marginTop="24sp"
                android:layout_marginBottom="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Policies"
                android:textSize="14sp"
                android:fontFamily="@font/raleway_medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey" />
            <TextView
                android:id="@+id/feedback"
                android:layout_marginTop="24sp"
                android:layout_marginBottom="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:textSize="14sp"
                android:fontFamily="@font/raleway_medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey" />
            <TextView
                android:id="@+id/aboutTheApp"
                android:layout_marginTop="24sp"
                android:layout_marginBottom="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About the app"
                android:textSize="14sp"
                android:fontFamily="@font/raleway_medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="230sp"/>
    </LinearLayout>
    </com.amar.library.ui.StickyScrollView>

</FrameLayout>